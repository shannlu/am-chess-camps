<%= simple_form_for(@family) do |f| %>
  <%= f.error_notification %>
  <%= f.error :base %><br>
  <div class="row">
    <div class="form-inputs">
      <%= f.input :parent_first_name, label_html: { class: 'active' } %>
      <%= f.input :family_name, label_html: { class: 'active' } %>
      <%= f.input :user_id, collection: User.all, label_method: :username, include_blank: true %>
      <%= f.input :active %>
    </div>
  </div>
  <div class="row">
    <div class="form-actions col s8">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>
