<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="form-inputs">
      <%= f.input :username, label_html: { class: 'active' } %>
			<%= f.input :email, label_html: { class: 'active' } %>
			<%= f.input :phone, label_html: { class: 'active' } %>
			<%= f.input :password, label_html: { class: 'active' } %>
			<%= f.input :password_confirmation, label_html: { class: 'active' } %>
      <%= f.input :role, collection: [["Parent","parent"],["Instructor","instructor"], ["Administrator","admin"]], include_blank: true %>
      <%= f.input :active %>
	  <%# f.input :active, as: :radio_buttons %>
    </div>
  </div>
  <div class="row">
    <div class="form-actions col s8">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>
